<!DOCTYPE html>
<html lang="en" class="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KasiFix | Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://www.gstatic.com/firebasejs/10.14.1/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/10.14.1/firebase-auth-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/10.14.1/firebase-database-compat.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap');
        body { font-family: 'Inter', sans-serif; }
        #toast-container {
            position: fixed;
            top: 24px;
            right: 24px;
            z-index: 9999;
            max-width: 380px;
        }
        .toast {
            transform: translateX(120%);
            opacity: 0;
            transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
            margin-bottom: 12px;
        }
        .toast.show {
            transform: translateX(0);
            opacity: 1;
        }
        .toast.success { background: #10b981; color: white; }
        .toast.error { background: #ef4444; color: white; }
        .toast.info { background: #3b82f6; color: white; }
        .toast.warning { background: #f59e0b; color: white; }
    </style>
</head>
<body class="bg-gray-50 dark:bg-gray-950 min-h-screen text-gray-900 dark:text-gray-100 transition-colors duration-300">
    <div id="toast-container"></div>

    <!-- Login Screen -->
    <div id="login-screen" class="flex items-center justify-center min-h-screen px-4">
        <div class="bg-white dark:bg-gray-800 rounded-3xl shadow-2xl p-10 max-w-md w-full text-center">
            <h1 class="text-4xl font-extrabold text-[#1e3a8a] dark:text-blue-400 mb-8">KasiFix<span class="text-[#f97316]">Fix</span> Admin</h1>
            <p class="text-gray-600 dark:text-gray-400 mb-8">Sign in with Google or use admin password.</p>
            <button onclick="signInWithGoogle()" class="w-full bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 text-gray-800 dark:text-gray-200 py-4 rounded-xl font-medium text-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition shadow-md flex items-center justify-center gap-3 mb-6">
                <i class="fa-brands fa-google text-xl text-[#4285F4]"></i>
                Sign in with Google
            </button>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">— or use admin password —</p>
            <input type="password" id="admin-password" placeholder="Password" class="w-full px-6 py-4 rounded-xl border border-gray-300 dark:border-gray-600 focus:border-[#f97316] outline-none text-lg mb-4 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100">
            <div class="flex items-center justify-start mb-6 text-sm text-gray-600 dark:text-gray-400">
                <input type="checkbox" id="remember-password" class="w-4 h-4 text-[#f97316] border-gray-300 dark:border-gray-600 rounded focus:ring-[#f97316]">
                <label for="remember-password" class="ml-2 cursor-pointer">Remember password on this device</label>
            </div>
            <button onclick="adminLogin()" class="w-full bg-[#f97316] text-white py-4 rounded-xl font-bold text-lg hover:bg-orange-600 transition shadow-lg">
                Login with Password
            </button>
            <p class="text-xs text-gray-500 dark:text-gray-400 mt-6">Only authorized accounts can access this dashboard.</p>
        </div>
    </div>

    <!-- Dashboard -->
    <div id="dashboard" class="hidden">
        <nav class="bg-white dark:bg-gray-900 border-b dark:border-gray-800 sticky top-0 z-40 shadow-sm">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16 items-center">
                    <div class="flex items-center">
                        <span class="text-2xl font-extrabold text-[#1e3a8a] dark:text-blue-400">KasiFix<span class="text-[#f97316]">Fix</span> Admin</span>
                    </div>
                    <div class="flex items-center gap-4">
                        <button onclick="toggleDarkMode()" class="p-3 rounded-xl hover:bg-gray-200 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-200 transition flex items-center gap-2">
                            <i class="fa-solid fa-moon text-xl dark:hidden"></i>
                            <i class="fa-solid fa-sun text-xl hidden dark:inline"></i>
                            <span class="text-sm font-medium hidden sm:inline">
                                <span class="dark:hidden">Dark</span>
                                <span class="hidden dark:inline">Light</span> Mode
                            </span>
                        </button>
                        <button onclick="logout()" class="text-gray-600 dark:text-gray-300 hover:text-red-600 dark:hover:text-red-400 font-medium">
                            <i class="fa-solid fa-arrow-right-from-bracket mr-2"></i> Logout
                        </button>
                    </div>
                </div>
            </div>
        </nav>

        <div class="max-w-7xl mx-auto px-4 py-12">
            <!-- Enhanced Stats Cards Row (kept exactly as provided – already good) -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
                <div class="bg-white dark:bg-gray-800 p-6 rounded-2xl shadow-lg border dark:border-gray-700 flex items-center gap-4 transition-all hover:shadow-xl">
                    <div class="p-4 bg-blue-100 dark:bg-blue-900/30 rounded-xl">
                        <i class="fa-solid fa-users text-3xl text-blue-600 dark:text-blue-400"></i>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Total Hustlers</p>
                        <p class="text-3xl font-bold text-gray-900 dark:text-white mt-1" id="stat-total">0</p>
                    </div>
                </div>
                <div class="bg-white dark:bg-gray-800 p-6 rounded-2xl shadow-lg border dark:border-gray-700 flex items-center gap-4 transition-all hover:shadow-xl">
                    <div class="p-4 bg-yellow-100 dark:bg-yellow-900/30 rounded-xl">
                        <i class="fa-solid fa-hourglass-half text-3xl text-yellow-600 dark:text-yellow-400"></i>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Pending</p>
                        <p class="text-3xl font-bold text-yellow-600 dark:text-yellow-400 mt-1" id="stat-pending">0</p>
                    </div>
                </div>
                <div class="bg-white dark:bg-gray-800 p-6 rounded-2xl shadow-lg border dark:border-gray-700 flex items-center gap-4 transition-all hover:shadow-xl">
                    <div class="p-4 bg-green-100 dark:bg-green-900/30 rounded-xl">
                        <i class="fa-solid fa-check-circle text-3xl text-green-600 dark:text-green-400"></i>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Verified</p>
                        <p class="text-3xl font-bold text-green-600 dark:text-green-400 mt-1" id="stat-verified">0</p>
                    </div>
                </div>
                <div class="bg-white dark:bg-gray-800 p-6 rounded-2xl shadow-lg border dark:border-gray-700 flex items-center gap-4 transition-all hover:shadow-xl">
                    <div class="p-4 bg-purple-100 dark:bg-purple-900/30 rounded-xl">
                        <i class="fa-solid fa-sack-dollar text-3xl text-purple-600 dark:text-purple-400"></i>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Avg Hourly Rate</p>
                        <p class="text-3xl font-bold text-gray-900 dark:text-white mt-1" id="stat-avg-rate">R0</p>
                    </div>
                </div>
            </div>

            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-6">
                <div>
                    <h2 class="text-3xl font-extrabold text-gray-900 dark:text-white">Hustler Applications</h2>
                    <p class="text-gray-600 dark:text-gray-400">Manage and verify new hustler profiles.</p>
                </div>
                <div class="flex flex-col sm:flex-row items-start sm:items-center gap-4 text-right">
                    <button onclick="openAddModal()" class="bg-[#1e3a8a] dark:bg-blue-700 text-white px-6 py-3 rounded-xl font-bold hover:bg-blue-900 dark:hover:bg-blue-800 transition shadow">
                        <i class="fa-solid fa-plus mr-2"></i> Add Hustler
                    </button>
                    <div class="whitespace-nowrap">
                        <p class="text-sm text-gray-500 dark:text-gray-400">
                            Total registered hustlers: <span id="total-count">0</span><br>
                            Pending applications: <span id="pending-count">0</span>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Filters -->
            <div class="bg-white dark:bg-gray-800 p-6 rounded-2xl shadow border dark:border-gray-700 mb-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Search</label>
                        <div class="relative">
                            <input type="text" id="search-input" placeholder="Name, phone, location..." class="w-full pl-10 pr-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 focus:border-[#f97316] outline-none bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100" oninput="filterHustlers()">
                            <i class="fa-solid fa-search absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 dark:text-gray-500"></i>
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Category</label>
                        <select id="category-filter" class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 focus:border-[#f97316] outline-none bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100" onchange="filterHustlers()">
                            <option value="all">All Categories</option>
                        </select>
                    </div>
                </div>
            </div>

            <div id="admin-container" class="space-y-6">
                <div class="text-center py-20 text-gray-500 dark:text-gray-400">
                    <i class="fa-solid fa-circle-notch fa-spin text-4xl mb-4"></i>
                    <p class="text-lg">Loading applications...</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Hustler Modal -->
    <div id="add-modal" class="fixed inset-0 bg-black bg-opacity-50 dark:bg-opacity-70 flex items-center justify-center z-50 hidden px-4">
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl max-w-lg w-full max-h-[90vh] overflow-y-auto">
            <div class="p-6 border-b dark:border-gray-700">
                <h3 class="text-2xl font-bold text-gray-900 dark:text-white">Add New Hustler</h3>
            </div>
            <div class="p-6 space-y-5">
                <div><label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Full Name *</label><input type="text" id="new-name" class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 focus:border-[#f97316] outline-none bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100" required></div>
                <div><label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Category *</label><input type="text" id="new-category" placeholder="e.g. Plumber, Electrician, Cleaner" class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 focus:border-[#f97316] outline-none bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100" required></div>
                <div><label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Phone Number *</label><input type="tel" id="new-phone" class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 focus:border-[#f97316] outline-none bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100" required></div>
                <div><label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Location</label><input type="text" id="new-location" placeholder="e.g. Soweto, Johannesburg" class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 focus:border-[#f97316] outline-none bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"></div>
                <div><label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Hourly Rate (R)</label><input type="number" id="new-rate" placeholder="e.g. 250" class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 focus:border-[#f97316] outline-none bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"></div>
                <div><label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Bio</label><textarea id="new-bio" rows="4" class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 focus:border-[#f97316] outline-none bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"></textarea></div>
                <div><label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Profile Image URL (optional)</label><input type="url" id="new-image" placeholder="https://..." class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 focus:border-[#f97316] outline-none bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"></div>
            </div>
            <div class="p-6 border-t dark:border-gray-700 flex justify-end gap-4">
                <button onclick="closeAddModal()" class="px-6 py-3 rounded-xl border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 font-medium hover:bg-gray-100 dark:hover:bg-gray-700 transition">Cancel</button>
                <button onclick="submitNewHustler()" class="px-6 py-3 rounded-xl bg-[#f97316] text-white font-bold hover:bg-orange-600 transition">Add Hustler</button>
            </div>
        </div>
    </div>

    <script>
        // ────────────────────────────────────────────────
        // Firebase Config & Initialization
        // ────────────────────────────────────────────────
        const firebaseConfig = {
            apiKey: "AIzaSyC4kR_HiywObXho8Zh20JyzC40iVrZq3lo",
            authDomain: "kasifix-5b102.firebaseapp.com",
            projectId: "kasifix-5b102",
            storageBucket: "kasifix-5b102.firebasestorage.app",
            messagingSenderId: "800882399249",
            appId: "1:800882399249:web:f8ecdfb12fa98d7a5779b0",
            measurementId: "G-8NKED4DENK"
        };

        firebase.initializeApp(firebaseConfig);
        const db = firebase.database();
        const auth = firebase.auth();

        // ────────────────────────────────────────────────
        // Theme (Dark/Light) Handling – already functional, unchanged
        // ────────────────────────────────────────────────
        function toggleDarkMode() {
            document.documentElement.classList.toggle('dark');
            localStorage.setItem('theme', document.documentElement.classList.contains('dark') ? 'dark' : 'light');
        }

        if (localStorage.getItem('theme') === 'dark' ||
            (!localStorage.getItem('theme') && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        }

        // ────────────────────────────────────────────────
        // Admin Password & Auto-login
        // ────────────────────────────────────────────────
        const SAVED_PASSWORD_KEY = 'kasifix_admin_saved_pw';
        const ADMIN_PASSWORD = "kasifix2024admin"; // ← CHANGE THIS IN PRODUCTION!

        window.addEventListener('load', () => {
            const savedPw = localStorage.getItem(SAVED_PASSWORD_KEY);
            if (savedPw && savedPw === ADMIN_PASSWORD) {
                document.getElementById('login-screen').classList.add('hidden');
                document.getElementById('dashboard').classList.remove('hidden');
                loadHustlers();
                showToast("Auto-logged in", "success");
            }
        });

        // ────────────────────────────────────────────────
        // Authentication Handlers
        // ────────────────────────────────────────────────
        function signInWithGoogle() {
            const provider = new firebase.auth.GoogleAuthProvider();
            provider.setCustomParameters({ prompt: 'select_account' });
            auth.signInWithPopup(provider)
                .then((result) => {
                    showToast(`Welcome, ${result.user.displayName || 'Admin'}!`, "success");
                    document.getElementById('login-screen').classList.add('hidden');
                    document.getElementById('dashboard').classList.remove('hidden');
                    loadHustlers();
                })
                .catch((error) => {
                    let message = "Google sign-in failed";
                    if (error.code === 'auth/popup-closed-by-user') message = "Sign-in cancelled";
                    showToast(message, "error");
                });
        }

        function adminLogin() {
            const entered = document.getElementById('admin-password').value;
            const remember = document.getElementById('remember-password').checked;
            if (entered === ADMIN_PASSWORD) {
                if (remember) localStorage.setItem(SAVED_PASSWORD_KEY, entered);
                else localStorage.removeItem(SAVED_PASSWORD_KEY);
                document.getElementById('login-screen').classList.add('hidden');
                document.getElementById('dashboard').classList.remove('hidden');
                loadHustlers();
                showToast("Login successful", "success");
            } else {
                showToast("Incorrect password", "error");
            }
        }

        function logout() {
            localStorage.removeItem(SAVED_PASSWORD_KEY);
            auth.signOut().then(() => {
                document.getElementById('dashboard').classList.add('hidden');
                document.getElementById('login-screen').classList.remove('hidden');
                document.getElementById('admin-password').value = '';
                document.getElementById('remember-password').checked = false;
                showToast("Logged out successfully", "info");
            });
        }

        auth.onAuthStateChanged((user) => {
            if (user) {
                document.getElementById('login-screen').classList.add('hidden');
                document.getElementById('dashboard').classList.remove('hidden');
                loadHustlers();
            }
        });

        // ────────────────────────────────────────────────
        // Core Dashboard Logic
        // ────────────────────────────────────────────────
        const adminContainer = document.getElementById('admin-container');
        const totalCountEl = document.getElementById('total-count');
        const pendingCountEl = document.getElementById('pending-count');
        let allHustlers = [];
        let filteredHustlers = [];

        function showToast(message, type = 'success') {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            toast.className = `toast ${type} px-6 py-4 rounded-xl shadow-2xl text-base font-medium flex items-center gap-3`;
            toast.innerHTML = `
                <i class="fa-solid ${type === 'success' ? 'fa-check-circle' : type === 'error' ? 'fa-exclamation-circle' : type === 'warning' ? 'fa-triangle-exclamation' : 'fa-info-circle'} text-xl"></i>
                <span>${message}</span>
            `;
            container.appendChild(toast);
            setTimeout(() => toast.classList.add('show'), 100);
            setTimeout(() => {
                toast.classList.remove('show');
                setTimeout(() => toast.remove(), 400);
            }, 3500);
        }

        function loadHustlers() {
            db.ref('hustlers').on('value', (snapshot) => {
                allHustlers = [];
                if (snapshot.val()) {
                    Object.keys(snapshot.val()).forEach(key => {
                        allHustlers.push({ id: key, ...snapshot.val()[key] });
                    });
                    allHustlers.sort((a, b) => (b.timestamp || 0) - (a.timestamp || 0));
                }
                populateCategoryFilter();
                filterHustlers();
                updateStats();
            });
        }

        function updateStats() {
            const total = allHustlers.length;
            const pending = allHustlers.filter(h => !h.verified).length;
            const verified = total - pending;
            const avgRate = total > 0
                ? (allHustlers.reduce((sum, h) => sum + (Number(h.rate) || 0), 0) / total).toFixed(0)
                : 0;

            document.getElementById('stat-total').textContent = total;
            document.getElementById('stat-pending').textContent = pending;
            document.getElementById('stat-verified').textContent = verified;
            document.getElementById('stat-avg-rate').textContent = `R${avgRate}`;
            totalCountEl.textContent = total;
            pendingCountEl.textContent = pending;
        }

        // Rest of your original script remains unchanged...
        // (populateCategoryFilter, filterHustlers, formatDateTime, renderAdminHustlers, toggleVerify, deleteHustler, openAddModal, closeAddModal, submitNewHustler)

        function populateCategoryFilter() {
            const select = document.getElementById('category-filter');
            const categories = new Set();
            allHustlers.forEach(h => {
                if (h.category && h.category.trim()) categories.add(h.category.trim());
            });
            while (select.options.length > 1) select.remove(1);
            [...categories].sort().forEach(cat => {
                const opt = document.createElement('option');
                opt.value = cat.toLowerCase();
                opt.textContent = cat;
                select.appendChild(opt);
            });
        }

        function filterHustlers() {
            const search = document.getElementById('search-input').value.toLowerCase().trim();
            const categoryFilter = document.getElementById('category-filter').value;
            filteredHustlers = allHustlers.filter(h => {
                const matchesSearch = !search ||
                    (h.name || '').toLowerCase().includes(search) ||
                    (h.phone || '').toLowerCase().includes(search) ||
                    (h.location || '').toLowerCase().includes(search) ||
                    (h.category || '').toLowerCase().includes(search);
                const matchesCategory = categoryFilter === 'all' || (h.category || '').toLowerCase() === categoryFilter;
                return matchesSearch && matchesCategory;
            });
            renderAdminHustlers();
        }

        function formatDateTime(timestamp) {
            if (!timestamp) return 'Unknown';
            const date = new Date(timestamp);
            return date.toLocaleString('en-ZA', {
                year: 'numeric',
                month: 'short',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit',
                hour12: false
            });
        }

        function renderAdminHustlers() {
            const hustlersToShow = filteredHustlers;
            if (hustlersToShow.length === 0) {
                if (allHustlers.length === 0) {
                    adminContainer.innerHTML = `<div class="text-center py-20 text-gray-500 dark:text-gray-400"><i class="fa-solid fa-inbox text-6xl mb-4 opacity-50"></i><p class="text-lg">No applications yet.</p></div>`;
                } else {
                    adminContainer.innerHTML = `<div class="text-center py-20 text-gray-500 dark:text-gray-400"><i class="fa-solid fa-filter text-6xl mb-4 opacity-50"></i><p class="text-lg">No hustlers match your filters.</p></div>`;
                }
                return;
            }

            adminContainer.innerHTML = '';
            hustlersToShow.forEach(h => {
                const createdDate = h.timestamp ? new Date(h.timestamp).toLocaleString('en-ZA') : 'Unknown';
                const statusClass = h.verified
                    ? 'bg-green-100 dark:bg-green-900/40 text-green-800 dark:text-green-300'
                    : 'bg-yellow-100 dark:bg-yellow-900/40 text-yellow-800 dark:text-yellow-300';
                const statusText = h.verified ? 'VERIFIED' : 'PENDING';
                const verifyBtnText = h.verified ? 'Unverify' : 'Verify';
                const verifyBtnClass = h.verified
                    ? 'bg-orange-500 hover:bg-orange-600'
                    : 'bg-green-600 hover:bg-green-700';

                const imageHtml = h.imageUrl
                    ? `<img src="${h.imageUrl}" alt="${h.name}" class="w-24 h-24 rounded-xl object-cover shadow">`
                    : `<div class="bg-gray-200 dark:bg-gray-700 border-2 border-dashed rounded-xl w-24 h-24 flex items-center justify-center text-3xl font-bold text-gray-400 dark:text-gray-500">${h.name?.charAt(0).toUpperCase() || '?'}</div>`;

                const verificationDateHtml = h.verified && h.verifiedAt
                    ? `<p class="text-xs text-green-700 dark:text-green-400 mt-2"><i class="fa-solid fa-calendar-check mr-1"></i>Verified on: ${formatDateTime(h.verifiedAt)}</p>`
                    : '';

                const card = `
                <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg border dark:border-gray-700 overflow-hidden transition-all hover:shadow-xl">
                    <div class="p-6 flex flex-col md:flex-row">
                        <div class="mb-4 md:mb-0 md:mr-8">${imageHtml}</div>
                        <div class="flex-grow">
                            <div class="flex justify-between items-start mb-3">
                                <div>
                                    <h3 class="text-xl font-extrabold text-gray-900 dark:text-white">${h.name || 'No name'}</h3>
                                    <p class="text-[#f97316] dark:text-orange-400 font-semibold">${h.category || 'No category'}</p>
                                    ${verificationDateHtml}
                                </div>
                                <span class="px-3 py-1 rounded-full text-xs font-bold ${statusClass}">${statusText}</span>
                            </div>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-600 dark:text-gray-400 mb-4">
                                <p><i class="fa-solid fa-phone mr-2"></i> ${h.phone || 'No phone'}</p>
                                <p><i class="fa-solid fa-location-dot mr-2"></i> ${h.location || 'No location'}</p>
                                <p><i class="fa-solid fa-sack-dollar mr-2"></i> R${h.rate || '0'}/hr</p>
                                <p><i class="fa-solid fa-calendar mr-2"></i> Applied: ${createdDate}</p>
                            </div>
                            <p class="text-gray-700 dark:text-gray-300 bg-gray-50 dark:bg-gray-900/50 p-4 rounded-xl border dark:border-gray-700"><strong>Bio:</strong> ${h.bio || 'No bio provided'}</p>
                        </div>
                        <div class="ml-0 md:ml-8 mt-6 md:mt-0 flex flex-row md:flex-col gap-3">
                            <button onclick="toggleVerify('${h.id}', ${!h.verified})" class="px-6 py-3 rounded-xl text-white font-bold transition ${verifyBtnClass}">${verifyBtnText}</button>
                            <button onclick="deleteHustler('${h.id}')" class="px-6 py-3 rounded-xl bg-red-600 hover:bg-red-700 text-white font-bold transition">Delete</button>
                        </div>
                    </div>
                </div>`;
                adminContainer.innerHTML += card;
            });
        }

        function toggleVerify(id, makeVerified) {
            const updates = { verified: makeVerified };
            if (makeVerified) {
                updates.verifiedAt = firebase.database.ServerValue.TIMESTAMP;
            } else {
                updates.verifiedAt = null;
            }
            db.ref('hustlers/' + id).update(updates)
                .then(() => showToast(makeVerified ? "Hustler verified" : "Verification removed", "success"))
                .catch(err => showToast('Error updating status: ' + err.message, "error"));
        }

        function deleteHustler(id) {
            showToast("Are you sure you want to permanently delete this hustler? This cannot be undone.", "warning");
            const container = document.getElementById('toast-container');
            const confirmToast = document.createElement('div');
            confirmToast.className = `toast warning px-6 py-4 rounded-xl shadow-2xl text-base font-medium flex items-center justify-between gap-4`;
            confirmToast.innerHTML = `
                <div class="flex items-center gap-3">
                    <i class="fa-solid fa-triangle-exclamation text-xl"></i>
                    <span>Confirm deletion?</span>
                </div>
                <div class="flex gap-3">
                    <button class="px-4 py-2 bg-white dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-lg font-medium hover:bg-gray-100 dark:hover:bg-gray-600" onclick="this.closest('.toast').remove()">Cancel</button>
                    <button class="px-4 py-2 bg-red-700 text-white rounded-lg font-medium hover:bg-red-800" onclick="confirmDelete('${id}', this.closest('.toast'))">Delete</button>
                </div>
            `;
            container.appendChild(confirmToast);
            setTimeout(() => confirmToast.classList.add('show'), 100);
        }

        function confirmDelete(id, toastElement) {
            db.ref('hustlers/' + id).remove()
                .then(() => {
                    showToast("Hustler profile deleted successfully", "success");
                    if (toastElement) {
                        toastElement.classList.remove('show');
                        setTimeout(() => toastElement.remove(), 400);
                    }
                })
                .catch(err => {
                    showToast('Error deleting hustler: ' + err.message, "error");
                    if (toastElement) {
                        toastElement.classList.remove('show');
                        setTimeout(() => toastElement.remove(), 400);
                    }
                });
        }

        function openAddModal() {
            document.getElementById('add-modal').classList.remove('hidden');
            ['new-name','new-category','new-phone','new-location','new-rate','new-bio','new-image'].forEach(id => document.getElementById(id).value = '');
        }

        function closeAddModal() {
            document.getElementById('add-modal').classList.add('hidden');
        }

        function submitNewHustler() {
            const name = document.getElementById('new-name').value.trim();
            const category = document.getElementById('new-category').value.trim();
            const phone = document.getElementById('new-phone').value.trim();

            if (!name || !category || !phone) {
                showToast("Name, Category, and Phone Number are required", "error");
                return;
            }

            const newHustler = {
                name,
                category,
                phone,
                location: document.getElementById('new-location').value.trim() || null,
                rate: document.getElementById('new-rate').value.trim() || null,
                bio: document.getElementById('new-bio').value.trim() || null,
                imageUrl: document.getElementById('new-image').value.trim() || null,
                verified: false,
                timestamp: firebase.database.ServerValue.TIMESTAMP
            };

            db.ref('hustlers').push(newHustler)
                .then(() => {
                    showToast("Hustler added successfully!", "success");
                    closeAddModal();
                })
                .catch(err => showToast("Error adding hustler: " + err.message, "error"));
        }
    </script>
</body>
</html>
